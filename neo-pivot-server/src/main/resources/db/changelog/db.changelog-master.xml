<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
      Master changelog:
      - core/: 系统内置（core）迁移脚本，随主干版本演进
      - custom/: 二开/业务定制迁移脚本（建议配合 Liquibase context=custom 启用）
    -->

    <includeAll path="core/00-bootstrap" relativeToChangelogFile="true"/>
    <includeAll path="core/auth" relativeToChangelogFile="true"/>
    <includeAll path="core/document" relativeToChangelogFile="true"/>
    <includeAll path="core/storage" relativeToChangelogFile="true"/>
    <includeAll path="core/ai-search" relativeToChangelogFile="true"/>
    <includeAll path="core/local" relativeToChangelogFile="true"/>
    <include file="custom/db.changelog-custom.sql" relativeToChangelogFile="true"/>
</databaseChangeLog>
